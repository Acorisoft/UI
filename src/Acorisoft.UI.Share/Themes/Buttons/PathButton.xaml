                                                    Storyboard.TargetName="PART_Bd">
                                            <DoubleAnimationUsingKeyFrames>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0"
                                                                      Value="1"/>
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.300"
                                                                      Value=".7">
                                                    <EasingDoubleKeyFrame.EasingFunction>
                                                        <CubicEase/>
                                                    </EasingDoubleKeyFrame.EasingFunction>
                                                </EasingDoubleKeyFrame>
                                            </DoubleAnimationUsingKeyFrames>
