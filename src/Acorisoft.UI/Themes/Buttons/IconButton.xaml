                <ControlTemplate>
                    <Rectangle Margin="-3" 
                               StrokeDashArray="2 2 2"
                               StrokeThickness="2"
                               Stroke="{StaticResource UI.Brushes.Accent}"
                               SnapsToDevicePixels="true"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

