<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Colors -->
    <Color x:Key="UI.Color.White">#FFFFFF</Color>
    <Color x:Key="UI.Color.Black">#000000</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="UI.Brushes.White" Color="{StaticResource UI.Color.White}"/>
    <SolidColorBrush x:Key="UI.Brushes.Black" Color="{StaticResource UI.Color.Black}"/>
    <SolidColorBrush x:Key="UI.Brushes.Transparent" Color="Transparent"/>
</ResourceDictionary>